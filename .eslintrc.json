{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "browser": true
  },
  "globals": {
    "it": true,
    "describe": true
  },
  "rules": {
    "consistent-return": 0,
    "func-names": 0,
    "prefer-const": 2,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "arrow-parens": "off",
    "valid-jsdoc": "off",
    "eol-last": "off",
    "array-bracket-spacing": "off",
    "no-unused-vars": "off",
    "no-else-return": "off",
    "strict": "off",
    "no-irregular-whitespace": [
      "error", {
        "skipComments": true
      }
    ]
  }
}
